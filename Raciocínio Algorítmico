import random
palavra = ["barril", "travesseiro"]
secreta = random.choice(palavra)
letras = list(secreta)
forca = ["_"] * len(letras)
tentativas = 10
print(" ".join(forca))

for i in range(0, 10):
    if forca == letras:
        print("Voce venceu!")
        break
    print(f"{tentativas} tentativas restantes")
    escolha = str(input("Digite a sua letra: "))
    if escolha in letras:
        for i2 in range(len(letras)):
            if escolha == letras[i2]:
                forca[i2] = escolha
    else:
        print("Letra n√£o faz parte da palavra!")
        tentativas = tentativas - 1
    print(" ".join(forca))
print("Fim de Jogo!")
